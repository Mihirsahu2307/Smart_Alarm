<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PickerDialogCustom" parent="TimePicker">
        <item name="colorControlNormal">@color/black</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="TimePicker" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/teal_200</item>
        <item name="android:timePickerStyle">@style/PickerDialogCustom</item>
        <item name="colorAccent">@color/teal_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="buttonBarNegativeButtonStyle">@style/negativeButton</item>

    </style>

    <style name="negativeButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>
</resources>